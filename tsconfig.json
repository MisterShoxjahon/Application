{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "skipLibCheck": true,
		"baseUrl": "./src",
		"paths": { "@/*": ["./*"]},
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": true,
		"alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
		},
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
} 